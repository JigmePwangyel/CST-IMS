<odoo>
    <data>
        <template id="sis_portal_main_template" inherit_id="portal.portal_my_home">
            <xpath expr="//div[@id='portal_client_category']" position="inside">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="icon"
                        t-value="'/cst_student_profile_module_custom/static/description/student.svg'" />
                    <t t-set="title">Student Information System</t>
                    <t t-set="text">View your information</t>
                    <t t-set="url" t-value="'/my/student/profile'" />
                    <t t-set="config_card" t-value="True" />
                </t>
            </xpath>
        </template>
    </data>
</odoo>